#!/bin/bash

# Usage: script/sync
# Sync main branch to public (public:heyverse/hey) repo.

set -e

PUBLIC_NAME="public"
PUBLIC_REPO="git@github.com:heyverse/hey.git"

# Add public remote if not exists
if ! git remote get-url $PUBLIC_NAME &>/dev/null; then
  echo "ðŸ”§ Adding public remote..."
  git remote add $PUBLIC_NAME $PUBLIC_REPO
fi

echo "ðŸš€ Syncing main branch to public repo..."
git push $PUBLIC_NAME main --force

echo "âœ… Fully synced main branch to public repo"
